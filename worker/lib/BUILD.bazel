load("@better_rules_javascript//typescript:rules.bzl", "ts_simple_library")
load("//commonjs:rules.bzl", "cjs_root")

package(default_visibility = ["//visibility:public"])

cjs_root(
    name = "root",
    package_name = "@better_rules_javascript/worker",
    descriptors = ["package.json"],
)

ts_simple_library(
    name = "lib",
    srcs = glob(["src/**/*.ts"]),
    compiler = "//rules:simple_tsc",
    compiler_options = [
        "--esModuleInterop",
        "--lib",
        "es2019",
        "--module",
        "commonjs",
        "--moduleResolution",
        "node",
        "--target",
        "es2019",
    ],
    root = ":root",
    strip_prefix = "better_rules_javascript/worker/lib/src",
    deps = [
        "@better_rules_javascript_npm//@types/node:lib",
        "@better_rules_javascript_npm//protobufjs:lib",
    ],
)
