load("@better_rules_javascript//commonjs:rules.bzl", "cjs_root")
load("@better_rules_javascript//javascript:rules.bzl", "js_export", "js_library")
load("@better_rules_javascript//jest:rules.bzl", "jest_test")

js_export(
    name = "babel",
    dep = "@npm_babel_core_7.18.10//:lib",
    deps = ["@npm//@babel/preset-env:lib"],
)

cjs_root(
    name = "root",
    package_name = "@better-rules-javascript-test/jest-transform",
)

js_library(
    name = "lib",
    srcs = ["example.js"],
    root = ":root",
)

js_library(
    name = "test_lib",
    srcs = ["example.spec.js"],
    root = ":root",
    deps = [":lib"],
)

js_library(
    name = "jest_config",
    srcs = ["jest.config.js"],
    root = ":root",
)

js_export(
    name = "main",
    dep = ":test_lib",
    extra_deps = [":babel"],
)

jest_test(
    name = "test",
    config = "jest.config.js",
    config_dep = ":jest_config",
    data = ["//:babel_config"],
    dep = ":main",
    jest = "@npm//jest:lib",
    node = "@better_rules_javascript//rules:nodejs",
    node_options=["--experimental-vm-modules", "--es-module-specifier-resolution=node"]
)
