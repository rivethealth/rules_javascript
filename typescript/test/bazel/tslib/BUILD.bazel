load("@better_rules_javascript//commonjs:rules.bzl", "cjs_root")
load("@better_rules_javascript//javascript:rules.bzl", "js_library")
load("@better_rules_javascript//typescript:rules.bzl", "ts_library")

cjs_root(
    name = "root_lib",
    package_name = "example",
    path = "root_lib",
)

cjs_root(
    name = "root_nolib",
    package_name = "example",
    path = "root_nolib",
)

ts_library(
    name = "lib",
    srcs = ["example.ts"],
    compiler = "//:ts",
    config = "tsconfig-lib.json",
    config_dep = ":tsconfig_lib",
    declaration_prefix = "root_lib",
    js_prefix = "root_lib",
    module = "commonjs",
    root = ":root_lib",
    src_prefix = "root_lib",
    target = "es5",
)

ts_library(
    name = "nolib",
    srcs = ["example.ts"],
    compiler = "//:ts_nolib",
    declaration_prefix = "root_nolib",
    js_prefix = "root_nolib",
    module = "commonjs",
    root = ":root_nolib",
    src_prefix = "root_nolib",
    target = "es5",
)

js_library(
    name = "tsconfig_lib",
    srcs = ["tsconfig-lib.json"],
    root = ":root_lib",
)
