load("//commonjs:rules.bzl", "cjs_root")
load("//javascript:rules.bzl", "js_library")
load("//jest:rules.bzl", "jest_test")
load("//typescript:rules.bzl", "ts_library")

js_library(
    name = "jest_config",
    srcs = ["jest.config.js"],
    root = ":root",
)

cjs_root(
    name = "root",
    package_name = "@better-rules-javascript/webpack-test",
)

jest_test(
    name = "test",
    size = "large",
    config = "jest.config.js",
    config_dep = ":jest_config",
    data = glob(["bazel/**/*"]) + ["@files//:common"],
    dep = ":test_lib",
    jest = "@npm//jest:lib",
    node = "@better_rules_javascript//rules:nodejs",
    tags = ["local"],
    visibility = ["//visibility:public"],
)

ts_library(
    name = "test_lib",
    srcs = glob(["src/**/*.ts"]),
    compiler = "//rules:tsc",
    config = "tsconfig.json",
    config_dep = ":tsconfig",
    root = ":root",
    deps = [
        "//test:lib",
        "@npm//@types/jest:lib",
        "@npm//@types/node:lib",
    ],
)

js_library(
    name = "tsconfig",
    srcs = ["tsconfig.json"],
    root = ":root",
    deps = ["//rules:tsconfig"],
)
