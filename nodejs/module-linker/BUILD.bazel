load("@rules_file//generate:rules.bzl", "generate")
load("//commonjs:rules.bzl", "cjs_root")
load("//javascript:rules.bzl", "js_library")
load("//rollup:rules.bzl", "configure_rollup", "rollup_bundle")
load("//typescript:rules.bzl", "ts_library")

package(default_visibility = ["//visibility:public"])

rollup_bundle(
    name = "bundle",
    dep = ":lib",
    output = "bundle.js",
    rollup = ":rollup",
)

js_library(
    name = "dist_lib",
    srcs = ["dist/bundle.js"],
    root = ":root",
)

generate(
    name = "gen",
    srcs = ["dist/bundle.js"],
    data = [":bundle"],
    data_prefix = "dist",
)

ts_library(
    name = "lib",
    srcs = glob(["src/**/*.ts"]),
    compiler = "//rules:tsc",
    config = "tsconfig.json",
    config_dep = ":tsconfig",
    root = ":root",
    deps = [
        "//commonjs/package:lib",
        "//util/json:lib",
        "//util/util:lib",
        "@better_rules_javascript_npm//@types/node:lib",
    ],
)

configure_rollup(
    name = "rollup",
    config = "rollup.config.cjs",
    config_dep = ":rollup_config",
    dep = "@better_rules_javascript_npm//rollup:lib",
)

js_library(
    name = "rollup_config",
    srcs = ["rollup.config.cjs"],
    root = ":root",
    deps = [
        "@better_rules_javascript_npm//@rollup/plugin-commonjs:lib",
        "@better_rules_javascript_npm//@rollup/plugin-node-resolve:lib",
    ],
)

cjs_root(
    name = "root",
    package_name = "@better-rules-javascript/nodejs-module-linker",
    descriptors = ["package.json"],
)

js_library(
    name = "tsconfig",
    srcs = ["tsconfig.json"],
    root = ":root",
    deps = ["//rules:tsconfig"],
)
